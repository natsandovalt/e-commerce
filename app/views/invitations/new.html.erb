<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Invite user</h1>

  <%= form_for(@invitation_form) do |form| %>
    <div class="my-5">
      <%= form.label :email %>
      <%= form.text_field :email, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :send_copy, "Send me the copy" %>
      <%= form.check_box :send_copy %>
    </div>

    <div class="inline">
      <%= form.submit "Invite user", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>

